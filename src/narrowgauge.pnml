spriteset (spriteset_narrowgauge_bridge_surfaces_opengfx, "gfx/ngrail_opengfx.png") {
    template_bridge_surfaces(10,300)
}
spriteset (spriteset_narrowgauge_bridge_surfaces_ttd, "gfx/ttd_railtypes.png") {
